# Example terraform.tfvars file
# Copy this to terraform.tfvars and fill in your values

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# Project Settings
project_name      = "payment-smart-bot"
bedrock_model_id = "meta.llama3-2-1b-instruct-v1:0"

# Stripe API Key (REQUIRED - get from Stripe Dashboard)
# For development, use test key: sk_test_...
# For production, use live key: sk_live_...
stripe_secret_key = "sk_test_YOUR_STRIPE_SECRET_KEY_HERE"

# Lambda Configuration
lambda_memory_size = 512
lambda_timeout     = 60  # Increased for Bedrock + Stripe API calls

# DynamoDB Settings
dynamodb_billing_mode = "PAY_PER_REQUEST"  # or "PROVISIONED" for high volume
session_ttl_hours     = 1

# API Gateway Throttling
api_throttle_rate  = 10   # requests per second
api_throttle_burst = 20   # burst capacity

# Monitoring
cloudwatch_log_retention_days = 7
enable_xray_tracing          = true
bedrock_token_threshold      = 100000  # Alert at 100k tokens/day (~$1.50)

# Security
enable_bedrock_guardrails = false  # Set to true for content filtering ($0.15/1k units)

# Optional: Additional tags
tags = {
  Team        = "DevOps"
  CostCenter  = "Engineering"
  Application = "PaymentBot"
}
